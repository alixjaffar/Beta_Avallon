# Vercel (for auto-deploying generated websites)
VERCEL_TOKEN="..."  # Vercel API token from https://vercel.com/account/tokens
VERCEL_TEAM_ID=""  # Optional: Your Vercel team ID (leave empty for personal account)

# Namecheap Domain & Email Hosting
NAMECHEAP_API_USER="your_api_user"
NAMECHEAP_API_KEY="your_api_key"
NAMECHEAP_USERNAME="your_username"
NAMECHEAP_CLIENT_IP="127.0.0.1"
NAMECHEAP_SANDBOX="true"

# n8n AI Voice Agents
# For production, use your VPS domain (e.g., https://agents.avallon.ca)
N8N_BASE_URL="http://159.89.113.242"
N8N_API_KEY="your_n8n_api_key"  # Get this from n8n Settings â†’ API after provisioning
N8N_WEBHOOK_URL="http://159.89.113.242/"

# Optional: Auto-activate workflows on creation (default: true)
# Set to "false" to require manual activation via "Publish to n8n" button
N8N_AUTO_ACTIVATE="true"

# Optional: n8n Admin Credentials for automatic user account creation
# If set, Avallon will automatically create n8n user accounts for new users
# This allows each Avallon user to have their own n8n account
# N8N_ADMIN_EMAIL="admin@example.com"
# N8N_ADMIN_PASSWORD="your-admin-password"

# Optional: Automatically send invitation emails to new n8n users
# Set to "true" to send invitation emails when accounts are created
# Requires N8N_ADMIN_EMAIL and N8N_ADMIN_PASSWORD to be set
# N8N_SEND_INVITATIONS="true"

# Optional: Encryption key for storing n8n passwords securely
# Generate a 32-byte key: openssl rand -base64 32
# If not set, a default key will be used (NOT SECURE for production!)
# N8N_ENCRYPTION_KEY="base64_encoded_32_byte_key_here"

