STRIPE_PRICE_STARTER_MONTHLY="price_..."
STRIPE_PRICE_STARTER_YEARLY="price_..."
STRIPE_PRICE_GROWTH_MONTHLY="price_..."
STRIPE_PRICE_GROWTH_YEARLY="price_..."
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_..."  # Optional
STRIPE_PRICE_ENTERPRISE_YEARLY="price_..."   # Optional

# Legacy price IDs (for backwards compatibility)
# STRIPE_PRICE_PRO_MONTHLY="price_..."
# STRIPE_PRICE_PRO_YEARLY="price_..."
# STRIPE_PRICE_BUSINESS_MONTHLY="price_..."
# STRIPE_PRICE_BUSINESS_YEARLY="price_..."

# Email Service
EMAIL_SERVICE_API_KEY="your_email_service_key"

# Email Notifications (for signup notifications)
EMAIL_USER="your-gmail@gmail.com"
EMAIL_APP_PASSWORD="your-gmail-app-password"
