# Database
DATABASE_URL="postgresql://username:password@localhost:5432/avallon"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Claude AI (optional, fallback)
ANTHROPIC_API_KEY="sk-ant-api03-..."
CLAUDE_API_KEY="sk-ant-api03-..."

# Gemini AI (Primary - uses @google/genai SDK for Gemini 3 Pro)
# Get your API key from Google AI Studio or Google Cloud Console
# Supports: gemini-3-pro-preview, gemini-2.5-pro, gemini-2.5-flash
GEMINI_API_KEY="AQ_..."  # Your Google Cloud API key for Gemini

# Convex Backend (Optional - for real-time updates like open-source AI Website Builder)
# Get your deployment URL from: https://convex.dev/
# Frontend Convex URL (exposed to browser)
NEXT_PUBLIC_CONVEX_URL="https://your-project.convex.cloud"
# Server-side Convex URL (backend only)
CONVEX_URL="https://your-project.convex.cloud"

# GitHub (for auto-deploying generated websites)
GITHUB_TOKEN="ghp_..."  # Personal Access Token with repo permissions
GITHUB_OWNER="your-github-username"  # Your GitHub username or org name

# Vercel (for auto-deploying generated websites)
VERCEL_TOKEN="..."  # Vercel API token from https://vercel.com/account/tokens
VERCEL_TEAM_ID=""  # Optional: Your Vercel team ID (leave empty for personal account)

# Namecheap Domain & Email Hosting
NAMECHEAP_API_USER="your_api_user"
NAMECHEAP_API_KEY="your_api_key"
NAMECHEAP_USERNAME="your_username"
NAMECHEAP_CLIENT_IP="127.0.0.1"
NAMECHEAP_SANDBOX="true"

# n8n AI Voice Agents
# For production, use your VPS domain (e.g., https://agents.yourdomain.com)
N8N_BASE_URL="http://localhost:5678"
N8N_API_KEY="your_n8n_api_key"  # Get this from n8n Settings → API after provisioning
N8N_WEBHOOK_URL="http://localhost:5678/"

# Optional: Auto-activate workflows on creation (default: true)
# Set to "false" to require manual activation via "Publish to n8n" button
N8N_AUTO_ACTIVATE="true"

# Optional: n8n Admin Credentials for automatic user account creation
# If set, Avallon will automatically create n8n user accounts for new users
# This allows each Avallon user to have their own n8n account
# N8N_ADMIN_EMAIL="admin@example.com"
# N8N_ADMIN_PASSWORD="your-admin-password"

# Optional: Automatically send invitation emails to new n8n users
# Set to "true" to send invitation emails when accounts are created
# Requires N8N_ADMIN_EMAIL and N8N_ADMIN_PASSWORD to be set
# N8N_SEND_INVITATIONS="true"

# Optional: Encryption key for storing n8n passwords securely
# Generate a 32-byte key: openssl rand -base64 32
# If not set, a default key will be used (NOT SECURE for production!)
# N8N_ENCRYPTION_KEY="base64_encoded_32_byte_key_here"

# Stripe Billing
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Price IDs (create in Stripe Dashboard → Products → Pricing)
