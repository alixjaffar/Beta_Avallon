{
  "name": "avallon-cloud",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "./node_modules/.bin/next dev -p 3000",
    "build": "npm run build:frontend && npm install && npm run install:browsers && prisma generate && next build",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "install:browsers": "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0 npx playwright install chromium || echo 'Playwright browser installation skipped (will install at runtime if needed)'",
    "start": "next start -p 3000",
    "postbuild": "prisma generate",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "email:show": "node scripts/email-manager.js show",
    "email:clear": "node scripts/email-manager.js clear"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.7.7",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/genai": "^1.34.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.18.0",
    "@types/nodemailer": "^7.0.3",
    "axios": "^1.7.7",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "firebase-admin": "^13.6.0",
    "google-auth-library": "^10.5.0",
    "next": "^15.0.3",
    "nodemailer": "^7.0.10",
    "playwright": "^1.57.0",
    "puppeteer": "^24.34.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^16.8.0",
    "tailwindcss": "^3.4.13",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/express": "^5.0.5",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prisma": "^6.18.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
