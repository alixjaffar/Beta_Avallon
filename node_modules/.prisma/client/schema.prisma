generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  clerkId       String         @unique
  email         String         @unique
  createdAt     DateTime       @default(now())
  sites         Site[]
  agents        Agent[]
  domains       Domain[]
  emailAccounts EmailAccount[]
  subscriptions Subscription[]
}

model Site {
  id                 String   @id @default(cuid())
  ownerId            String
  owner              User     @relation(fields: [ownerId], references: [id])
  name               String
  slug               String   @unique
  status             String   @default("draft") // draft | building | live
  repoUrl            String?
  previewUrl         String?
  customDomain       String?
  vercelProjectId    String? // Vercel project ID
  vercelDeploymentId String? // Latest deployment ID
  domains            Domain[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Agent {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  name      String
  n8nId     String? // id of the n8n workflow/agent
  status    String   @default("inactive") // inactive | active
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Domain {
  id        String         @id @default(cuid())
  ownerId   String
  owner     User           @relation(fields: [ownerId], references: [id])
  domain    String         @unique
  status    String         @default("pending") // pending | active | failed
  siteId    String?
  site      Site?          @relation(fields: [siteId], references: [id])
  emails    EmailAccount[]
  createdAt DateTime       @default(now())
}

model EmailAccount {
  id        String   @id @default(cuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  domainId  String
  domain    Domain   @relation(fields: [domainId], references: [id])
  inbox     String // e.g., "hello", "support"
  status    String   @default("active") // active | inactive
  createdAt DateTime @default(now())

  @@unique([domainId, inbox])
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String
  user                 User      @relation(fields: [userId], references: [id])
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  status               String    @default("free") // free | trialing | active | canceled | past_due
  plan                 String    @default("free") // free | pro | business
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([userId])
}

model BetaSignup {
  id                String   @id @default(cuid())
  name              String
  email             String   @unique
  birthday          String
  emailSubscription Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([email])
  @@index([createdAt])
}
